  "author": {
    "name": "Noah Jelich",
    "url": "https://github.com/njelich"
  },
  "devDependencies": {
    "@arbitrum/sdk": "^4.0.0",
    "@chainlink/contracts": "^1.1.0",
    "@chainlink/hardhat-chainlink": "^0.0.4",

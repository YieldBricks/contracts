{
  "extends": "solhint:recommended",
  "plugins": ["prettier"],
  "rules": {
    "code-complexity": ["error", 8],
    "compiler-version": ["error", ">=0.8.4"],
    "func-visibility": ["error", { "ignoreConstructors": true }],
    "max-line-length": ["error", 120],
    "named-parameters-mapping": "warn",
    "interface-starts-with-i": "error",
    "private-vers-leading-underscore": "warn",
    "no-console": "off",
    "not-rely-on-time": "off",
    "max-states-count": ["warn", 15],
    "no-unused-vars": "error",
    "payable-fallback": "warn",
    "reason-string": ["error", { "maxLength": 250 }],
    "constructor-syntax": "error",
    "quotes": ["error", "double"],
    "event-name-camelcase": "warn",
    "func-name-mixedcase": "warn",
    "modifier-name-mixedcase": "warn",
    "func-param-name-mixedcase": "warn",
    "use-forbidden-name": "error",
    "imports-on-top": "error",
    "ordering": "warn",
    "visibility-modifier-order": "error",
    "avoid-call-value": "error",
    "avoid-low-level-calls": "error",
    "avoid-sha3": "error",
    "avoid-suicide": "error",
    "avoid-throw": "error",
    "avoid-tx-origin": "error",
    "check-send-result": "error",
    "multiple-sends": "error",
    "no-complex-fallback": "error",
    "no-inline-assembly": "error",
    "not-rely-on-block-hash": "error",
    "reentrancy": "error",
    "state-visibility": "error",
    "gas-calldata-parameters": "error",
    "gas-indexed-events": "error",
    "gas-small-strings": "error",
    "gas-struct-packing": "error",
    "comprehensive-interface": "warn",
    "not-rely-on-time": "warn",
    "prettier/prettier": [
      "error",
      {
        "endOfLine": "auto"
      }
    ]
  }
}
